@model List<CartItem>


<div class="row mt-5 mb-2">
    <h2>Давайте выберем глубину логирования</h2>
    
        @using (Html.BeginForm("Write", "Level",FormMethod.Post, new{@class="row mt-5 mb-2"}))
        {



            {
                foreach (var function in @ViewBag.Fu)
                {

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckCheckedDisabled" checked disabled>
                        <label class="form-check-label" for="flexSwitchCheckCheckedDisabled">@function.name - @function.desk</label>
                    </div>
                }
                @for (int i = 0; i < Model.Count(); i++)
                {var fname=Model[i].func.name + " - " + Model[i].func.desk;

                    <div class="form-check form-switch">
                        @Html.CheckBoxFor(m => m[i].Checked, new { @checked = "checked", @class="form-check-input"})
                        
                        @Html.DisplayFor(m=>fname )
                        @Html.HiddenFor(m => m[i].func.id)
                        @Html.HiddenFor(m => m[i].func.name)
                    </div>
                }
            
        <div class="btn-group inline mt-5">
        <a class="btn btn-secondary btn-lg" asp-controller="Home" asp-action="Index" >Назад</a>
        <button class="btn btn-primary btn-lg" type="submit" value="Submit" >Продолжаем</button>
        </div>
   }
            }
   
   </div>
    </div>
